<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#52756969"
            android:fontFamily="casual"
            android:foregroundGravity="fill_vertical"
            android:gravity="center"
            android:text="@string/Title"
            android:textColor="#B63434"
            android:textSize="20sp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/editTextText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2E948181"
            android:ems="10"
            android:gravity="center_horizontal"
            android:text="@string/BirthdayDate"
            android:textSize="14sp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <EditText
            android:id="@+id/textViewBirthdayDate"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_horizontal"
            android:hint="@string/ChooseDate"
            android:inputType="datetime"
            android:text="@string/ChooseDate"
            android:textSize="16sp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/buttonMinutes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#904E4E"
            android:text="@string/buttonMinutes" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/buttonHours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#904E4E"
            android:text="@string/buttonHours" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/buttonMonths"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#904E4E"
            android:text="@string/buttonMonths" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/textViewResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/Result"
            android:textSize="16sp" />

    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>